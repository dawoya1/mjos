{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@memory/*": ["memory/*"],
      "@knowledge/*": ["knowledge/*"],
      "@context/*": ["context/*"],
      "@reasoning/*": ["reasoning/*"],
      "@agents/*": ["agents/*"],
      "@roles/*": ["roles/*"],
      "@team/*": ["team/*"],
      "@communication/*": ["communication/*"],
      "@api/*": ["api/*"],
      "@cli/*": ["cli/*"],
      "@sdk/*": ["sdk/*"],
      "@mcp/*": ["mcp/*"],
      "@storage/*": ["storage/*"],
      "@security/*": ["security/*"],
      "@monitoring/*": ["monitoring/*"],
      "@performance/*": ["performance/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
