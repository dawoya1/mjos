/**
 * MJOS Main Entry Point - Simplified Version
 * 魔剑工作室操作系统主入口 - 简化版本
 */

// 导出核心类型
export * from './types/index';

// 简单的MJOS类
export class MJOS {
  private version = '1.0.0';
  private isRunning = false;
  
  constructor() {
    console.log('MJOS initialized successfully!');
  }
  
  getVersion(): string {
    return this.version;
  }
  
  start(): void {
    if (this.isRunning) {
      console.log('MJOS is already running');
      return;
    }
    
    this.isRunning = true;
    console.log('MJOS started!');
  }
  
  stop(): void {
    if (!this.isRunning) {
      console.log('MJOS is not running');
      return;
    }
    
    this.isRunning = false;
    console.log('MJOS stopped!');
  }
  
  getStatus(): { version: string; running: boolean } {
    return {
      version: this.version,
      running: this.isRunning
    };
  }
}

// 默认导出
export default MJOS;
