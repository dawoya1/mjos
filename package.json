{
  "name": "mjos",
  "version": "1.0.0",
  "description": "Magic Sword Studio Operating System - A revolutionary AI team collaboration framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/magic-sword-studio/mjos.git"
  },
  "homepage": "https://github.com/magic-sword-studio/mjos",
  "bugs": {
    "url": "https://github.com/magic-sword-studio/mjos/issues"
  },
  "keywords": [
    "ai",
    "team-collaboration",
    "typescript",
    "framework",
    "memory-system",
    "task-management",
    "performance-monitoring",
    "enterprise",
    "mcp",
    "model-context-protocol",
    "claude-desktop",
    "cursor"
  ],
  "author": "Magic Sword Studio",
  "license": "MIT",
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "ts-node src/integration/SystemIntegrationTest.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "type-check": "tsc --noEmit",
    "docs:build": "typedoc src/index.ts",
    "docs:serve": "http-server docs -p 8080",
    "quality": "node quality-report.js",
    "performance": "node test-performance.js",
    "demo": "ts-node src/index.ts",
    "example": "ts-node examples/complete-usage-example.ts",
    "demo:context": "ts-node examples/context-management-demo.ts",
    "demo:collaboration": "ts-node examples/real-collaboration-demo.ts",
    "demo:mcp": "ts-node examples/mcp-server-demo.ts",
    "mcp:start": "node examples/mcp-server-demo.js",
    "mcp:demo": "ts-node examples/mcp-server-demo.ts",
    "demo:monitoring": "ts-node examples/system-monitoring-demo.ts",
    "demo:phase1": "node examples/phase1-demo.js",
    "demo:phase2": "node examples/phase2-demo.js",
    "demo:phase3": "node examples/phase3-demo.js",
    "demo:complete": "node examples/complete-system-demo.js",
    "mcp:server": "ts-node src/mcp/server.ts",
    "docs": "typedoc src/index.ts"
  },
  "keywords": [
    "ai",
    "team-collaboration", 
    "mjos",
    "magic-sword-studio",
    "prompt-framework",
    "artificial-intelligence",
    "mcp",
    "multi-role",
    "workflow",
    "state-management",
    "memory-continuity"
  ],
  "author": "Magic Sword Studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MagicSwordStudio/MJOS.git"
  },
  "bugs": {
    "url": "https://github.com/MagicSwordStudio/MJOS/issues"
  },
  "homepage": "https://github.com/MagicSwordStudio/MJOS#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "xml2js": "^0.6.2",
    "eventemitter3": "^5.0.1",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "chalk": "^4.1.2",
    "winston": "^3.11.0",
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/xml2js": "^0.4.14",
    "@types/uuid": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error"
    }
  }
}
